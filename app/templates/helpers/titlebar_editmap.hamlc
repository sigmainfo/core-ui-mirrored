.titlebar
  %h3!= @title
  .actions
    - for action in @actions
      != @action_for action

  .submit_concept
    %a.reset-map.disable_buttons{:href => "javascript:void(0)", :disabled => "disabled"} = I18n.t('panels.concept_map.reset_map')
    %a.cancel-map{:href => "javascript:void(0)"} = I18n.t('panels.concept_map.cancel_map')
    %button.save-map.disable_buttons{:title => I18n.t('concept.save_connections.hint'), :type => "submit", :disabled => "disabled"} = I18n.t('panels.concept_map.save_map')