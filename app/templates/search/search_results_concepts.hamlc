%h3= I18n.t "search.results.concepts.headline"
%table.concepts
  %thead
    %tr
      %th.label= I18n.t "search.results.concepts.header.label"
      %th.super= I18n.t "search.results.concepts.header.super_concepts"
  %tbody
    - for concept in @concepts
      %tr
        %td.label.concept
        %td.super.concept
- if @can "create", Coreon.Models.Concept
  .edit
    %a.button.create-concept{href: @repositoryPath("concepts/new/terms/en/#{@query}")}= I18n.t "concept.new"
%p.actions
  %a.show-all{href: @repositoryPath("concepts/search/#{@query}")}= I18n.t "search.results.concepts.show_all"
